{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
   <div class="row">
      {% for offer in offers %}
        <div class="col-sm-6 d-flex align-items-stretch">
          <div class="card text-center mt-3">
            <div class="card-header">
              {{offer.location}} / {{offer.contract}}
            </div>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">{{offer.job_title}}</h5>
              <div class="flex-grow-1">
                <p class="card-text flex-grow-1">{{offer.description}}</p>
              </div>
              <a href={{offer.url}} target=”_blank” class="btn btn-primary mt-2">view</a>
            </div>
              <div class="card-footer text-muted">
                {% if offer.company is defined  %}
                  {{offer.company }}
                {% else %}
                  Anonyme
                {% endif %}
              </div>

          </div>
       </div>
      {% endfor %}
   </div>
</div>
{% endblock %}
